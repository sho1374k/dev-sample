---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    label: "iframeクリック再生",
    href: "click-play-iframe",
  },
  {
    label: "スプレットシートAPI",
    href: "api-spreadsheets",
  },
  {
    label: "円周上のポジション",
    href: "circle-position",
  },
  {
    label: "アコーディオン",
    href: "accordion",
  },
  {
    label: "アンカーリンク",
    href: "anker-link",
  },
  {
    label: "モーダル（id識別）",
    href: "modal-id",
  },
  {
    label: "モーダル（画像）",
    href: "modal-image",
  },
  {
    label: "住所検索API",
    href: "api-zip-code-search",
  },
  {
    label: "hover animation with JS",
    href: "hover-animation-with-javascript",
  },
  {
    label: "simplebar 横スクロール",
    href: "simplebar-horizontal",
  },
  {
    label: "simplebar 縦クスロール",
    href: "simplebar-vertical",
  },
  {
    label: "swiper 均一速度で自動で流れる",
    href: "swiper-auto-slide",
  },
  {
    label: "swiper 1枚ごとにループする",
    href: "swiper-type2",
  },
  {
    label: "swiper 1枚ごとでループしない",
    href: "swiper-type1",
  },
  {
    label: "テスト",
    href: "test",
  },
  
];
---
<Layout title="">
  <h1>Sample</h1>
	<main>
		<ul>
      {
        posts.map((data) => {
          const url = `/${data.href}/`;
          const pageName = data.label != "" ? data.label : data.href;
          return(
            <li>
              <a href={url} target="_blank" rel="noopener noreferrer">{pageName}</a>
            </li>
          )
        })
      }
		</ul>
	</main>
</Layout>
<style lang="scss">
  @use "../styles/global/app" as *;
  :root {
    --dummy-black: #222;
    --dummy-baige: #f9f2e5;
  }
  body {
    background: var(--black2);
    min-height: 100vh;
    box-sizing: border-box;
    padding: 12px;
    &::before{
      content: "";
      pointer-events: none;
      user-select: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      margin: auto;
      z-index: 99;
      border: solid 13px var(--beige);
      box-sizing: border-box;
    }
    &::after{
      content: "";
      pointer-events: none;
      user-select: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      margin: auto;
      z-index: 100;
      border: solid 12px var(--black2);
      box-sizing: border-box;
    }
  }
  h1 {
    font-size: 32px;
    color: var(--beige);
    font-weight: bold;
    line-height: 100%;
    padding: 32px 24px;
    border: solid 1px var(--beige);
    box-sizing: border-box;
    @include sp_w(){
      padding: 24px 20px;
    }
  }
  ul{
    @include pc_w(){
      display: flex;
      flex-wrap: wrap;
      li{
        width: 50%;
      }
    }
  }
  a {
    position: relative;
    z-index: 0;
    display: block;
    width: 100%;
    color: #f9f2e5;
    border: solid 1px var(--beige);
    box-sizing: border-box;
    padding: 24px;
    font-weight: normal;
    font-size: 16px;
    line-height: 160%;
    text-transform: capitalize;
    @include sp_w(){
      padding: 20px;
    }
    @include hover(){
      color: rgba(#f9f2e5, .5);
    }
  }
</style>